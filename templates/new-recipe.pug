div.content

  h1 Create a new recipe

  form(action='/new', method='POST')
    label Title
      input(name='title')
    label Ingredients
      textarea(name='ingredients', rows=10)
    label Directions
      textarea(name='directions', rows=10)
    button(type=submit) Save
